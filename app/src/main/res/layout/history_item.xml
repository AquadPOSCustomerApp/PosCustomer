<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dim_10"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="@dimen/dim_10"
    android:src="@drawable/send_price_quotation"
    android:id="@+id/img_payment_mode" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_toRightOf="@+id/img_payment_mode">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_pay_mode"
            android:text="Sat, Mar 18, 09:14 PM"
            android:textColor="@color/black"
            android:id="@+id/tv_date_time"

            android:textSize="@dimen/dim_14"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_7"
            android:layout_marginRight="@dimen/dim_10"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order_45"
                android:id="@+id/tv_order_id"
                android:textSize="@dimen/dim_18"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:id="@+id/tv_description"
                android:text="Men Hair cut &amp; wash includes head massage"
                android:textSize="@dimen/dim_16"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_2"
            android:background="#E2E2E2"
            android:layout_marginTop="@dimen/dim_8"
            />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 114"
            android:id="@+id/tv_cost"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dim_14"
            android:layout_marginRight="@dimen/dim_5"/>
</RelativeLayout>
</LinearLayout>