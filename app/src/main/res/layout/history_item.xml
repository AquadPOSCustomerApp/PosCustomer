<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_history_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_5"
    android:layout_marginLeft="5dp"
    android:elevation="5dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dim_5">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_payment_mode"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dim_10">

                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_pay_mode"
                    android:text="Sat, Mar 18, 09:14 PM"
                    android:textColor="@color/black"

                    android:textSize="@dimen/dim_14"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim_10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingTop="@dimen/dim_5">

                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order_45"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_6"
                        android:text="Total Item Purchased : 5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_16" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dim_5"
                android:text="Rs 114"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_14" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>