<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cont_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="@dimen/dim_10"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/cont_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/offer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_15"
                android:textStyle="bold" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_rate"
    android:layout_marginTop="@dimen/dim_20">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_centerVertical="true"
        android:id="@+id/offer_price"
        android:text="4.5"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dim_12"/>
            <RatingBar
                android:id="@+id/rating"
                style="@style/FitnessRatingBarMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_rate"
                android:isIndicator="true"
                android:numStars="5"

                android:stepSize="0.5" />
    </RelativeLayout>

            <TextView
                android:id="@+id/off_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_rate"
                android:drawableTop="@drawable/back"
                android:layout_marginTop="@dimen/dim_15"
                android:paddingLeft="16dp"
                android:textSize="15sp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trail_merchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_merchant"
                android:drawableTop="@drawable/back"
                android:text="Trail- 011 2664 1517"
                android:layout_marginTop="@dimen/dim_10"
                android:paddingLeft="16dp"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_below="@id/trail_merchant"
                android:background="@android:color/transparent"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="@string/timestamp"
                android:textAppearance="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_10" />
</RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>